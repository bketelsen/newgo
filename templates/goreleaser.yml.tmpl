project_name: newgo
release:
  github:
    owner: bketelsen
    name: newgo
    name_template: '{{`{{.Tag}}`}}'
brew:
  commit_author:
    name: newgo
    email: bketelsen@gmail.com
  install: bin.install "newgo"
builds:
- goos:
  - linux
  - darwin
  - windows
  goarch:
  - amd64
  - "386"
  goarm:
  - "6"
  main: .
  ldflags: -s -w -X main.Version={{`{{.Version}}`}}  -X main.BuildDate={{`{{.Date}}`}}
  binary: newgo
archive:
  format: tar.gz
  name_template: '{{`{{.Binary}}`}}_{{`{{.Version}}`}}_{{`{{.Os}}`}}_{{`{{.Arch }}`}}{{`{{if .Arm}}`}}v{{`{{.Arm }}`}}{{`{{end }}`}}'
  files:
  - licence*
  - LICENCE*
  - license*
  - LICENSE*
  - readme*
  - README*
  - changelog*
  - CHANGELOG*
fpm:
  bindir: /usr/local/bin
snapshot:
name_template: SNAPSHOT-{{`{{.Commit }}`}}
checksum:
name_template: '{{`{{.ProjectName }}`}}_{{`{{.Version }}`}}_checksums.txt'

